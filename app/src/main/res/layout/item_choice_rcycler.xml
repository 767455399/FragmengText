<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:background="@drawable/commodity_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/xingmingTextView"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="众歧是"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/neixingTextView"
            android:layout_below="@+id/xingmingTextView"
            android:layout_alignLeft="@+id/xingmingTextView"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:text="hfcshgvfskdhshks"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/imageView"
            android:visibility="invisible"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/choice"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>

</LinearLayout>
