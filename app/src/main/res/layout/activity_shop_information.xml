<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.fragmenttext.ui.activity.ShopInformationActivity">

    <include
        android:id="@+id/shopInformationToolbar"
        layout="@layout/global_include_toolbar" />


    <android.support.design.widget.TabLayout
        android:id="@+id/shopInformationTabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/theme_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tab_text_checked"
        app:tabTextColor="@color/tab_text_default">

    </android.support.design.widget.TabLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/drak" />

    <android.support.v4.view.ViewPager
        android:id="@+id/shopInformationViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
