<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/common_background_color"
tools:context="com.example.administrator.fragmenttext.ui.activity.BankBranchActivity">

<include
    android:id="@+id/branchBankToolbar"
    layout="@layout/global_include_toolbar" />

<include
    layout="@layout/global_include_toolbar_shadow"
    android:layout_width="match_parent"
    android:layout_height="1px" />


<LinearLayout
    android:id="@+id/bankBranchHeader"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/bankBranchProvinceTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#333333"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/bankBranchIndicator1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:contentDescription="@string/image_view_description"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_arrow_gray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bankBranchCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#333333"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bankBranchIndicator2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:contentDescription="@string/image_view_description"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_arrow_gray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bankBranchNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#333333"
        android:visibility="gone" />


</LinearLayout>

<include
    layout="@layout/global_include_toolbar_shadow"
    android:layout_width="match_parent"
    android:layout_height="1px" />


<FrameLayout
    android:id="@+id/bankBranchContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>


</LinearLayout>

