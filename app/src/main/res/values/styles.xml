<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CommonCenterTransparentDialogStyle" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- toolbar text color. -->
        <item name="android:textColorPrimary">@color/toolbar_title_color</item>
        <!-- toolbar icon color. -->
        <item name="colorControlNormal">@color/toolbar_icon_color</item>
        <!-- toolbar click ripple color. -->
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <!-- toolbar text size. menu text and so on-->
        <item name="android:textSize">14sp</item>
        <!-- toolbar text style. -->
        <item name="android:textStyle">normal</item>
    </style>

    <!-- toolbar title text size. -->
    <style name="Toolbar.TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="personal_information_style">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CommonCenterDialogStyle" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="LoadingDialogStyle" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
